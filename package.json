    "jest": "^24.9.0",
    "jest-json-schema": "^2.1.0",
    "jest-junit": "^10.0.0",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.6.0",
    "nodemon": "^2.0.2",
    "selenium-webdriver": "^4.0.0-alpha.5",
    "stellar-sdk": "^3.3.0",
    "toml": "^3.0.0"
